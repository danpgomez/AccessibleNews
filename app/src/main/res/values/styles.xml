<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="textAppearanceBody2">@style/DateText</item>
        <item name="textAppearanceBody1">@style/ArticleTitle</item>
    </style>
    
    <style name="DateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="ArticleTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
